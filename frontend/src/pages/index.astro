---
import MainLayout from "../layouts/MainLayout.astro";
import Navbar from "../components/Navbar.astro";
---

<MainLayout title="Bienvenido">
    <Navbar />

    <div class="bg-[#E6EBF2] overflow-x-hidden">
        <!-- 1. HERO SECTION -->
        <section
            id="hero"
            class="min-h-[90vh] flex items-center pt-24 pb-20 overflow-hidden relative"
        >
            <!-- Background Decorative Elements -->
            <div
                class="absolute top-0 right-0 -mr-24 -mt-24 w-[600px] h-[600px] bg-indigo-200/20 blur-[120px] rounded-full"
            >
            </div>
            <div
                class="absolute bottom-0 left-0 -ml-24 -mb-24 w-[400px] h-[400px] bg-blue-200/20 blur-[100px] rounded-full"
            >
            </div>

            <div class="container-custom relative z-10">
                <div class="flex flex-col lg:flex-row items-center gap-20">
                    <div class="flex-1 text-left reveal active">
                        <div
                            class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white shadow-sm border border-slate-100 text-indigo-600 text-xs font-black uppercase tracking-widest mb-8"
                        >
                            <span class="relative flex h-2 w-2">
                                <span
                                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"
                                ></span>
                                <span
                                    class="relative inline-flex rounded-full h-2 w-2 bg-indigo-600"
                                ></span>
                            </span>
                            Plataforma de Éxito Académico
                        </div>
                        <h1
                            class="text-6xl md:text-8xl font-black text-slate-900 tracking-tight leading-[1] mb-8"
                        >
                            El futuro de tu <br />
                            <span class="text-indigo-600"
                                >Negocio inicia aquí</span
                            >
                        </h1>
                        <p
                            class="text-2xl text-slate-600 font-medium max-w-2xl mb-12 leading-relaxed"
                        >
                            Diseña, estructura y genera planes de negocio
                            excepcionales con la precisión que el mundo
                            académico y empresarial exige.
                        </p>
                        <div
                            class="flex flex-col sm:flex-row items-center gap-6"
                        >
                            <a
                                href="/register"
                                class="btn btn-primary text-xl px-12 py-6 shadow-2xl shadow-indigo-600/20 transform hover:-translate-y-1 hover:scale-105 active:scale-95 transition-all w-full sm:w-auto"
                            >
                                Empezar Gratis
                            </a>
                            <a
                                href="/login"
                                class="group flex items-center gap-3 text-slate-900 font-black text-lg hover:text-indigo-600 transition-colors py-4 px-6 rounded-2xl bg-white/50 backdrop-blur-sm border border-transparent hover:border-indigo-100 shadow-sm hover:shadow-xl transition-all"
                            >
                                <svg
                                    class="w-6 h-6 transition-transform group-hover:translate-x-1"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2.5"
                                        d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                                    ></path>
                                </svg>
                                Iniciar sesión
                            </a>
                        </div>
                    </div>

                    <div class="flex-1 relative reveal active delay-200">
                        <div class="relative group">
                            <!-- Main Image -->
                            <div
                                class="relative z-10 transition-all duration-700"
                            >
                                <img
                                    src="/images/hero_entrepreneur.png"
                                    alt="Emprendedor trabajando"
                                    class="w-full h-auto rounded-[40px] shadow-2xl border-[12px] border-white"
                                />
                            </div>

                            <!-- Decorative background box -->
                            <div
                                class="absolute inset-0 bg-indigo-600 rounded-[40px] rotate-3 scale-105 opacity-10"
                            >
                            </div>

                            <!-- Floating Stat Card - Repositioned for full visibility -->
                            <div
                                class="absolute -bottom-4 -left-24 bg-white p-8 rounded-3xl shadow-2xl hidden md:block animate-float delay-700 z-20"
                            >
                                <div class="flex items-center gap-6">
                                    <div
                                        class="w-16 h-16 bg-emerald-50 text-emerald-600 rounded-2xl flex items-center justify-center"
                                    >
                                        <svg
                                            class="w-8 h-8"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2.5"
                                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                            ></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p
                                            class="text-sm text-slate-400 font-black uppercase tracking-widest"
                                        >
                                            Validación Institucional
                                        </p>
                                        <p
                                            class="text-3xl font-black text-slate-900 tracking-tighter"
                                        >
                                            100% Garantizada
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 2. ¿Qué puedes hacer con MIRAI? -->
        <section id="que-puedes-hacer" class="py-40 relative">
            <div class="container-custom">
                <div
                    class="flex flex-col lg:flex-row items-end justify-between mb-24 gap-8"
                >
                    <div class="max-w-2xl reveal">
                        <h2
                            class="text-5xl md:text-6xl font-black text-slate-900 tracking-tight mb-8"
                        >
                            Potencia tu visión con herramientas inteligentes
                        </h2>
                        <p
                            class="text-slate-500 text-xl font-medium leading-relaxed"
                        >
                            Diseñamos cada característica de MIRAI para que tú
                            te concentres en la estrategia, mientras nosotros
                            nos encargamos de la estructura y los números.
                        </p>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
                    <!-- Feature 1: Guía -->
                    <div class="card p-4 overflow-hidden reveal group">
                        <div class="flex flex-col md:flex-row h-full">
                            <div class="p-10 md:w-3/5">
                                <div
                                    class="w-16 h-16 bg-indigo-50 text-indigo-600 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-indigo-600 group-hover:text-white transition-all duration-300"
                                >
                                    <svg
                                        class="w-8 h-8"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                                        ></path>
                                    </svg>
                                </div>
                                <h3
                                    class="text-3xl font-black text-slate-900 mb-6 tracking-tight"
                                >
                                    Asistente Paso a Paso
                                </h3>
                                <p
                                    class="text-slate-600 text-lg font-medium leading-relaxed mb-6"
                                >
                                    Completa tu plan de forma intuitiva con
                                    nuestro sistema de asistentes guiados.
                                </p>
                                <div
                                    class="flex items-center gap-2 text-indigo-600 font-black"
                                >
                                    Explorar guía
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                </div>
                            </div>
                            <div
                                class="md:w-2/5 relative overflow-hidden group"
                            >
                                <img
                                    src="/images/planning_team.png"
                                    alt="Asistente guiado"
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                                />
                                <div
                                    class="absolute inset-0 bg-indigo-600/10 mix-blend-overlay"
                                >
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Feature 2: Exportación -->
                    <div
                        class="card p-4 overflow-hidden reveal group delay-200"
                    >
                        <div class="flex flex-col md:flex-row h-full">
                            <div class="p-10 md:w-3/5">
                                <div
                                    class="w-16 h-16 bg-emerald-50 text-emerald-600 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-emerald-600 group-hover:text-white transition-all duration-300"
                                >
                                    <svg
                                        class="w-8 h-8"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
                                        ></path>
                                    </svg>
                                </div>
                                <h3
                                    class="text-3xl font-black text-slate-900 mb-6 tracking-tight"
                                >
                                    Exportación Word
                                </h3>
                                <p
                                    class="text-slate-600 text-lg font-medium leading-relaxed mb-6"
                                >
                                    Un solo clic y tendrás un documento Word
                                    (.docx) perfectamente formateado.
                                </p>
                                <div
                                    class="flex items-center gap-2 text-emerald-600 font-black"
                                >
                                    Ver formato
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                </div>
                            </div>
                            <div
                                class="md:w-2/5 relative overflow-hidden group"
                            >
                                <img
                                    src="/images/document_export_mockup.png"
                                    alt="Documento exportado"
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                                />
                                <div
                                    class="absolute inset-0 bg-emerald-600/10 mix-blend-overlay"
                                >
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Feature 3: Análisis -->
                    <div
                        class="card p-4 overflow-hidden reveal group delay-400"
                    >
                        <div class="flex flex-col md:flex-row h-full">
                            <div class="p-10 md:w-3/5">
                                <div
                                    class="w-16 h-16 bg-blue-50 text-blue-600 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300"
                                >
                                    <svg
                                        class="w-8 h-8"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"
                                        ></path>
                                    </svg>
                                </div>
                                <h3
                                    class="text-3xl font-black text-slate-900 mb-6 tracking-tight"
                                >
                                    Análisis Predictivo
                                </h3>
                                <p
                                    class="text-slate-600 text-lg font-medium leading-relaxed mb-6"
                                >
                                    Visualiza proyecciones financieras y flujos
                                    de caja con gráficos de alto impacto.
                                </p>
                                <div
                                    class="flex items-center gap-2 text-blue-600 font-black"
                                >
                                    Ver dashboards
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                </div>
                            </div>
                            <div
                                class="md:w-2/5 relative overflow-hidden group"
                            >
                                <img
                                    src="/images/smart_dashboard_preview.png"
                                    alt="Dashboard"
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                                />
                            </div>
                        </div>
                    </div>

                    <!-- Feature 4: Académico -->
                    <div
                        class="card p-4 overflow-hidden reveal group delay-600"
                    >
                        <div class="flex flex-col md:flex-row h-full">
                            <div class="p-10 md:w-3/5">
                                <div
                                    class="w-16 h-16 bg-purple-50 text-purple-600 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-purple-600 group-hover:text-white transition-all duration-300"
                                >
                                    <svg
                                        class="w-8 h-8"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2.5"
                                            d="M12 14l9-5-9-5-9 5 9 5z"></path>
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2.5"
                                            d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
                                        ></path>
                                    </svg>
                                </div>
                                <h3
                                    class="text-3xl font-black text-slate-900 mb-6 tracking-tight"
                                >
                                    Rigor Académico
                                </h3>
                                <p
                                    class="text-slate-600 text-lg font-medium leading-relaxed mb-6"
                                >
                                    Estructura validada por expertos docentes,
                                    ideal para proyectos de grado.
                                </p>
                                <div
                                    class="flex items-center gap-2 text-purple-600 font-black"
                                >
                                    Formatos soportados
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2.5"
                                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                                    </svg>
                                </div>
                            </div>
                            <div
                                class="md:w-2/5 relative overflow-hidden group"
                            >
                                <img
                                    src="/images/student_collaboration.png"
                                    alt="Rigor académico"
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-1000"
                                />
                                <div
                                    class="absolute inset-0 bg-purple-600/10 mix-blend-overlay"
                                >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 3. ¿Cómo funciona MIRAI? -->
        <section
            id="como-funciona"
            class="py-40 bg-white shadow-2xl shadow-indigo-100 rounded-[5rem] mx-4 md:mx-12 overflow-hidden relative"
        >
            <div class="absolute top-0 right-0 p-24 opacity-5">
                <svg
                    class="w-96 h-96 text-indigo-900"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
                    ></path>
                </svg>
            </div>

            <div class="container-custom relative z-10">
                <div class="flex flex-col lg:flex-row items-center gap-24">
                    <div class="flex-1 reveal">
                        <div
                            class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-indigo-50 text-indigo-600 text-xs font-black uppercase tracking-widest mb-10"
                        >
                            Proceso Simplificado
                        </div>
                        <h2
                            class="text-5xl md:text-7xl font-black text-slate-900 tracking-tight mb-16"
                        >
                            4 Pasos hacia un <br />
                            <span class="text-indigo-600">Plan Profesional</span
                            >
                        </h2>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                            <!-- Step 1 -->
                            <div class="group reveal">
                                <span
                                    class="inline-flex w-14 h-14 bg-indigo-600 text-white rounded-2xl items-center justify-center font-black text-2xl shadow-xl shadow-indigo-200 mb-6 transform group-hover:scale-110 transition-transform"
                                    >1</span
                                >
                                <h4
                                    class="text-2xl font-black text-slate-900 mb-4"
                                >
                                    Estructura Inicial
                                </h4>
                                <p
                                    class="text-slate-500 font-medium leading-relaxed"
                                >
                                    Define la misión y visión de tu
                                    emprendimiento.
                                </p>
                            </div>

                            <!-- Step 2 -->
                            <div class="group reveal delay-100">
                                <span
                                    class="inline-flex w-14 h-14 bg-slate-900 text-white rounded-2xl items-center justify-center font-black text-2xl shadow-xl shadow-slate-200 mb-6 transform group-hover:scale-110 transition-transform"
                                    >2</span
                                >
                                <h4
                                    class="text-2xl font-black text-slate-900 mb-4"
                                >
                                    Datos del Negocio
                                </h4>
                                <p
                                    class="text-slate-500 font-medium leading-relaxed"
                                >
                                    Ingresa precios y costos de forma sencilla.
                                </p>
                            </div>

                            <!-- Step 3 -->
                            <div class="group reveal delay-200">
                                <span
                                    class="inline-flex w-14 h-14 bg-slate-900 text-white rounded-2xl items-center justify-center font-black text-2xl shadow-xl shadow-slate-200 mb-6 transform group-hover:scale-110 transition-transform"
                                    >3</span
                                >
                                <h4
                                    class="text-2xl font-black text-slate-900 mb-4"
                                >
                                    Cálculos Automatizados
                                </h4>
                                <p
                                    class="text-slate-500 font-medium leading-relaxed"
                                >
                                    MIRAI procesa y valida toda la información.
                                </p>
                            </div>

                            <!-- Step 4 -->
                            <div class="group reveal delay-300">
                                <span
                                    class="inline-flex w-14 h-14 bg-emerald-600 text-white rounded-2xl items-center justify-center font-black text-2xl shadow-xl shadow-emerald-200 mb-6 transform group-hover:scale-110 transition-transform"
                                    >4</span
                                >
                                <h4
                                    class="text-2xl font-black text-slate-900 mb-4"
                                >
                                    Plan Exportado
                                </h4>
                                <p
                                    class="text-slate-500 font-medium leading-relaxed"
                                >
                                    Descarga tu documento (.docx) listo para el
                                    éxito.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="flex-1 relative reveal delay-500">
                        <div class="relative">
                            <!-- Using Hero image as representative for the planning process here -->
                            <img
                                src="/images/smart_dashboard_preview.png"
                                alt="Equipo de planificación"
                                class="w-full h-auto rounded-[48px] shadow-2xl relative z-10"
                            />
                            <div
                                class="absolute -inset-8 bg-indigo-600 rounded-[48px] blur-3xl opacity-10"
                            >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 4. ¿Para quién está pensado MIRAI? -->
        <section id="para-quien" class="py-40">
            <div class="container-custom">
                <div
                    class="flex flex-col md:flex-row items-center justify-between mb-24 gap-8"
                >
                    <div class="max-w-xl reveal">
                        <h2
                            class="text-5xl font-black text-slate-900 tracking-tight mb-4"
                        >
                            ¿Quiénes usan MIRAI?
                        </h2>
                        <p class="text-slate-500 text-xl font-medium">
                            Aliados en tu crecimiento profesional.
                        </p>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                    <!-- Segment 1 -->
                    <div class="group relative reveal">
                        <div
                            class="card p-0 flex flex-col md:flex-row overflow-hidden relative z-10"
                        >
                            <div
                                class="w-full md:w-1/2 overflow-hidden h-64 md:h-auto"
                            >
                                <img
                                    src="/images/young_entrepreneur_success.png"
                                    alt="Emprendedor"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div
                                class="w-full md:w-1/2 p-10 flex flex-col justify-center bg-white"
                            >
                                <h4
                                    class="text-2xl font-black text-slate-900 mb-4"
                                >
                                    Emprendedores
                                </h4>
                                <p class="text-slate-500 font-medium">
                                    Formaliza tu pasión y obtén un
                                    financiamiento para tu nuevo emprendimiento.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Segment 2 -->
                    <div class="group relative reveal delay-200">
                        <div
                            class="card p-0 flex flex-col md:flex-row overflow-hidden relative z-10"
                        >
                            <div
                                class="w-full md:w-1/2 overflow-hidden h-64 md:h-auto order-1 md:order-2"
                            >
                                <img
                                    src="/images/planning_team.png"
                                    alt="Estudiantes"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div
                                class="w-full md:w-1/2 p-10 flex flex-col justify-center bg-white order-2 md:order-1"
                            >
                                <h4
                                    class="text-2xl font-black text-slate-900 mb-4"
                                >
                                    Estudiantes
                                </h4>
                                <p class="text-slate-500 font-medium">
                                    Compañero perfecto para estudiantes que
                                    quieren crear sus emprendimientos.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- 5. CTA Final -->
        <section class="py-40 container-custom">
            <div
                class="bg-mesh rounded-[4rem] p-16 md:p-32 text-center relative overflow-hidden reveal"
            >
                <div
                    class="absolute -top-40 -left-40 w-96 h-96 bg-indigo-600 rounded-full blur-[150px] opacity-40"
                >
                </div>
                <div
                    class="absolute -bottom-40 -right-40 w-96 h-96 bg-blue-600 rounded-full blur-[150px] opacity-30"
                >
                </div>
                <div class="relative z-10">
                    <h2
                        class="text-5xl md:text-8xl font-black text-white leading-[0.9] tracking-tighter mb-12"
                    >
                        Haz que tu proyecto <br />
                        <span
                            class="bg-gradient-to-r from-indigo-400 to-blue-300 bg-clip-text text-transparent"
                            >sea realidad hoy.</span
                        >
                    </h2>
                    <div
                        class="flex flex-col sm:flex-row items-center justify-center gap-8"
                    >
                        <a
                            href="/register"
                            class="btn btn-primary text-2xl px-12 py-7 rounded-3xl"
