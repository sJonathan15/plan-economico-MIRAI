---
import MainLayout from "../layouts/MainLayout.astro";
import { InputField } from "../components/InputField";
import Navbar from "../components/Navbar.astro";

// This is a public page
---

<MainLayout title="Restablecer Contraseña">
    <Navbar />
    <div class="min-h-[calc(100vh-80px)] flex items-center justify-center p-4">
        <div class="card max-w-md w-full animate-reveal" id="reset-card">
            <div id="loading-state" class="text-center py-8">
                <div
                    class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-indigo-600 border-t-transparent mb-4"
                >
                </div>
                <p class="text-slate-500 font-medium">Validando token...</p>
            </div>

            <div id="error-state" class="hidden text-center">
                <div
                    class="w-20 h-20 bg-red-50 text-red-600 rounded-full flex items-center justify-center mx-auto mb-6"
                >
                    <svg
                        class="w-10 h-10"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                        ></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-black text-slate-900 mb-2">
                    Enlace no válido
                </h2>
                <p class="text-slate-500 mb-8" id="error-message">
                    El enlace de recuperación ha expirado o no es válido.
                </p>
                <a href="/login" class="btn btn-primary w-full"
                    >Volver al inicio</a
                >
            </div>

            <div id="form-state" class="hidden">
                <div class="text-center mb-10">
                    <h2
                        class="text-3xl font-black text-slate-900 tracking-tight mb-3"
                    >
                        Nueva contraseña
                    </h2>
                    <p class="text-slate-500 font-medium">
                        Define tu nueva clave de acceso para MIRAI.
                    </p>
                </div>

                <form id="reset-form" class="space-y-6">
                    <InputField
                        client:load
                        label="Nueva Contraseña"
                        type="password"
                        id="password"
                        name="password"
                        placeholder="••••••••"
                        required
                    />
                    <InputField
                        client:load
                        label="Confirmar Contraseña"
                        type="password"
                        id="confirmPassword"
                        name="confirmPassword"
                        placeholder="••••••••"
                        required
                    />

                    <button
                        type="submit"
                        class="btn btn-primary w-full h-14 text-lg shadow-xl shadow-indigo-500/10 hover:-translate-y-1 transition-all"
                    >
                        Restablecer Contraseña
                    </button>

                    <p
                        id="form-error"
                        class="text-sm font-bold text-red-600 hidden text-center"
                    >
                    </p>
                </form>
            </div>

            <div id="success-state" class="hidden text-center">
                <div
                    class="w-20 h-20 bg-emerald-50 text-emerald-600 rounded-full flex items-center justify-center mx-auto mb-6"
                >
                    <svg
                        class="w-10 h-10"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2.5"
                            d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <h2 class="text-2xl font-black text-slate-900 mb-2">
                    ¡Todo listo!
                </h2>
                <p class="text-slate-500 mb-8">
                    Tu contraseña ha sido actualizada correctamente. Ya puedes
                    iniciar sesión.
                </p>
                <a href="/login" class="btn btn-primary w-full h-14 text-lg"
                    >Ir al Login</a
                >
            </div>
        </div>
    </div>
</MainLayout>

<script>
    import { api } from "../lib/api";

    const params = new URLSearchParams(window.location.search);
    const token = params.get("token");

    const loadingState = document.getElementById("loading-state");
    const errorState = document.getElementById("error-state");
    const formState = document.getElementById("form-state");
    const successState = document.getElementById("success-state");
    const resetForm = document.getElementById("reset-form") as HTMLFormElement;
    const formError = document.getElementById("form-error");

    // Simple client-side check. Real check happens on submit.
    if (!token) {
        showState("error");
    } else {
        setTimeout(() => showState("form"), 800); // Aesthetic delay
    }

    function showState(state: "loading" | "error" | "form" | "success") {
        loadingState?.classList.add("hidden");
        errorState?.classList.add("hidden");
        formState?.classList.add("hidden");
        successState?.classList.add("hidden");

        if (state === "loading") loadingState?.classList.remove("hidden");
        if (state === "error") errorState?.classList.remove("hidden");
        if (state === "form") formState?.classList.remove("hidden");
        if (state === "success") successState?.classList.remove("hidden");
    }

    resetForm?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const password = (
            document.getElementById("password") as HTMLInputElement
        ).value;
        const confirmPassword = (
            document.getElementById("confirmPassword") as HTMLInputElement
        ).value;
        const btn = resetForm.querySelector(
            'button[type="submit"]',
        ) as HTMLButtonElement;

        if (password !== confirmPassword) {
            showFormError("Las contraseñas no coinciden");
            return;
        }

        if (password.length < 6) {
            showFormError("La contraseña debe tener al menos 6 caracteres");
            return;
        }

        if (btn) {
            btn.disabled = true;
            btn.innerHTML =
                '<span class="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin"></span>';
        }

        formError?.classList.add("hidden");

        try {
            await api.resetPassword(token!, password);
            showState("success");
        } catch (error: any) {
            console.error(error);
            showFormError(
                error.message || "El enlace ha expirado o es inválido",
            );
        } finally {
            if (btn) {
                btn.disabled = false;
                btn.innerText = "Restablecer Contraseña";
            }
        }
    });

    function showFormError(msg: string) {
        if (formError) {
            formError.innerText = msg;
            formError.classList.remove("hidden");
        }
    }
</script>

<style>
    .animate-reveal {
        animation: reveal 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    }

    @keyframes reveal {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
